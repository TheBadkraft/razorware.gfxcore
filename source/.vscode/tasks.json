{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build tests",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/testing/GfxCore.Testing/gfxcore.testing.csproj"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "build dev app",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/dev/GfxCore.Application/gfxcore.application.csproj"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"build gfx"
			]
		},
		{
			"label": "build gfx",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/.vscode/build_gfx.sh"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build ext",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/.vscode/build_ext.sh"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
	]
}