<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>GfxCore.Resources.Bar</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <AssemblyName>gfx.resources.bar</AssemblyName>
    <AssemblyInformationalVersion>1.0.0-alpha.01+2025001</AssemblyInformationalVersion>
    <AssemblyTitle>Gfx Resource Pack</AssemblyTitle>
    <AssemblyDescription>A test resource extension mod</AssemblyDescription>
    <AssemblyCopyright>Copyright 2025 RazorWare</AssemblyCopyright>
    <AssemblyAuthors>RazorWare</AssemblyAuthors>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="../../dev/lib/razorware.gfxcore.domain.dll" />
    
    <Content Include="gfxpackage.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
